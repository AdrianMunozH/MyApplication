<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/setting1"
        android:layout_width="372dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="An meinem längsten Tag studiere ich..."
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setting2"
        android:layout_width="43dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="von"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting1" />

    <EditText
        android:id="@+id/firstClass"
        android:layout_width="47dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/setting2"
        app:layout_constraintTop_toBottomOf="@+id/setting1" />

    <TextView
        android:id="@+id/setting3"
        android:layout_width="43dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="bis"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/firstClass"
        app:layout_constraintTop_toBottomOf="@+id/setting1" />

    <EditText
        android:id="@+id/lastClass"
        android:layout_width="47dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@+id/setting3"
        app:layout_constraintTop_toBottomOf="@+id/setting1" />

    <TextView
        android:id="@+id/setting4"
        android:layout_width="201dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Jede Stunde dauert..."
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstClass" />

    <EditText
        android:id="@+id/classLength"
        android:layout_width="43dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting4" />

    <TextView
        android:id="@+id/setting5"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="Minuten"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/setting4"
        tools:layout_editor_absoluteX="59dp" />

    <TextView
        android:id="@+id/setting6"
        android:layout_width="201dp"
        android:layout_height="30dp"
        android:layout_marginEnd="112dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Jede Pause dauert..."
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/setting4"
        app:layout_constraintTop_toBottomOf="@+id/lastClass" />

    <EditText
        android:id="@+id/breakLength"
        android:layout_width="43dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/setting6"
        tools:layout_editor_absoluteX="248dp" />

    <TextView
        android:id="@+id/setting7"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Minuten"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/breakLength"
        app:layout_constraintTop_toBottomOf="@+id/setting6" />

    <TextView
        android:id="@+id/setting8"
        android:layout_width="372dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Die erste Stunde beginnt um..."
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting5" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="139dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/setting8"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btnSettings"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:text="Apply"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="268dp" />

</android.support.constraint.ConstraintLayout>